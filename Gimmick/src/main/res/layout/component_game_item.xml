<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/details"
    android:layout_width="0dp"
    android:layout_height="match_parent"
    android:layout_weight="1"
    android:clickable="true"
    android:background="?clickable_item_background"
    android:focusable="true"
    android:paddingBottom="@dimen/padding_default"
    android:paddingLeft="@dimen/padding_default"
    android:paddingTop="@dimen/padding_default"
    tools:ignore="Overdraw">

    <ImageView
        android:id="@+id/poster"
        android:layout_width="80dp"
        android:layout_height="100dp"
        android:layout_alignParentLeft="true"
        android:layout_marginRight="@dimen/padding_default"
        android:contentDescription="@string/description_poster"
        android:scaleType="fitCenter"
        android:visibility="invisible"
        android:src="@drawable/appwidget_bg" />

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/poster"
        android:ellipsize="end"
        android:maxLines="2"
        android:paddingBottom="@dimen/padding_inline"
        android:paddingRight="@dimen/padding_default"
        android:text="@string/app_name"
        android:textAppearance="@style/TextAppearance.Medium.Light" />

    <TextView
        android:id="@+id/platforms"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/title"
        android:layout_toRightOf="@id/poster"
        android:ellipsize="end"
        android:maxLines="1"
        android:paddingBottom="@dimen/padding_inline"
        android:paddingRight="@dimen/padding_default"
        android:text="@string/app_name"
        android:textAppearance="@style/TextAppearance.Small.Label" />

    <TextView
        android:id="@+id/release_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/platforms"
        android:layout_toRightOf="@id/poster"
        android:ellipsize="end"
        android:maxLines="1"
        android:paddingRight="@dimen/padding_default"
        android:text="@string/app_name"
        android:textAppearance="@style/TextAppearance.Small.Dim" />

</RelativeLayout>
